<?php

include_once 'header.php';
include_once 'footer.php';

class Body {
	private $title;
	
	public function __construct() {
		$this->title = 'lllsdf';
		
		Header::loadHead($title);
		echo '<div id="container">';
		$this->loadBody();
		echo '</div>';
		Footer::loadFooter();
	}
	
	public function loadBody();
}

function callBody() {
	new Body();
} callBody();