<?php

include_once 'header.php';
include_once 'footer.php';

class Body {

	public function __construct() {
		$this->init();
	}

	private function init() {
		Header::loadHead();
		$this->loadBody();
		Footer::loadFooter();
	}

	public function loadBody(){}

	public function getTitle() {
		return Header::$title;
	}

	public function setTtile($title) {
		Header::$title = $title;
	}
}
